{
  "root":true,
  "env": {
    "es2021": true,
    "jest": true,
    "node": true
  },
  "globals": {},
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    }
  },
  "ignorePatterns": ["node_modules/", "lib/", "test/"],
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  },

  "extends": ["eslint:recommended", "plugin:import/errors", "plugin:import/warnings", "plugin:promise/recommended"],

  "plugins": ["import", "promise", "prettier"],

  "rules": {
    "camelcase": "off",
    "no-debugger": "warn",
    "no-unused-vars": "warn",
    "import/no-unresolved": "error",
    "import/prefer-default-export": "off",
    "no-await-in-loop": "warn",
    "block-scoped-var": "warn",
    "no-throw-literal": "warn",
    "default-case": "warn",
    "no-eq-null": "warn",
    "linebreak-style": "off",
    "no-useless-escape": "off",
    "promise/no-nesting": "off",
    "promise/always-return": "off",
    "no-extra-boolean-cast": "warn",
    "no-prototype-builtins": "warn",
    "no-unreachable": "warn",
    "no-empty-pattern": "off",
    "prettier/prettier": "warn"
  }
}
